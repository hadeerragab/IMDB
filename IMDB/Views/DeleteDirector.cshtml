@model Director

@{
    ViewData["Title"] = "UPDATE Director";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>UPDATE Director DATA</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="DeleteConfirmed">
                    <div  class="text-danger"></div>

                    <div class="form-group text-center">
                        <img id="ProfilePicturePreview"  class="border-info rounded-circle" style="max-width: 150px" />
                    </div>
                     <div class="form-group">
                        <label asp-for="ID" class="control-label"></label>
                        <input asp-for="ID" class="form-control" />
                        <span asp-validation-for="ID" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="profilepicURL" class="control-label"></label>
                        <input asp-for="profilepicURL" class="form-control" />
                        <span asp-validation-for="profilepicURL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Fname" class="control-label"></label>
                        <input asp-for="Fname" class="form-control" />
                        <span asp-validation-for="Fname" class="text-danger"></span>
                    </div>
                     <div class="form-group">
                        <label asp-for="Lname" class="control-label"></label>
                        <input asp-for="Lname" class="form-control" />
                        <span asp-validation-for="Lname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="age" class="control-label"></label>
                        <input asp-for="age" class="form-control" />
                        <span asp-validation-for="age" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="CONFIRM DELETE" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

